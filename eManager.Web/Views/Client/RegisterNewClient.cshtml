
@using eManager.WebModels;
@model ClientViewModel

@{
    ViewBag.Title = "Adding client";
 

}

<div class="container">
  
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 pb-5">
            <form method="post" enctype="multipart/form-data" asp-controller="Client" asp-action="RegisterNewClient">
            
                @Html.HiddenFor(x => x.ClientId)
                <div class="card border-primary rounded-0">
                    <div class="card-header p-0">
                        <div class="form-group">
                            <span>@ViewBag.Message</span>

                        </div>
                        <div class="bg-info text-white text-center py-2">
                            <h3><i class="fa fa-envelope"></i> Client registration</h3>
                            <p class="m-0">Fill out client details below</p>
                        </div>
                    </div>
                    <div class="card-body p-3">
                        <!--Body-->
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                </div>
                                <input type="text" class="form-control" id="ClientName" name="Name" placeholder="Client name" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-envelope text-info"></i></div>
                                </div>
                                <input type="email" class="form-control" id="ClientEmail" name="Email" placeholder="example@email.com" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa text-info"></i></div>
                                </div>
                                <textarea class="form-control" placeholder="Description" name="Description" required></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-phone text-info"></i></div>
                                </div>
                                <input type="number" class="form-control" id="ClientPhone" name="phone" placeholder="Phone" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa text-info"></i></div>
                                </div>
                                <textarea class="form-control" placeholder="Address" name="Address" required></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa text-info"></i></div>
                                </div>
                                <textarea class="form-control" placeholder="TaxNumber" name="TaxNumber" required></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa text-info"></i></div>
                                </div>
                                <textarea class="form-control" placeholder="BankAccount" name="BankAccount" required></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <p>Upload Logo image File</p>
                                <input id="LogoImage" name="LogoImage" type="hidden" />
                                <input id="uploadLogoImage" type="file" name="LogoImage" />

                            </div>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Add to registry" class="btn btn-info btn-block rounded-0 py-2">
                        </div>
                    </div>
                </div>
            </form>
            <!--Form with header-->
            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="location.href='@Url.Action("ShowClients", "Client")'">Back</button>
        </div>
    </div>
</div>