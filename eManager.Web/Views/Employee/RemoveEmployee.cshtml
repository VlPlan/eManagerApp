
@using eManager.WebModels;
@model EmployeeViewModel

@{
    ViewBag.Title = "Remove employee";
    Layout = "_Layout";

}

<div class="modal fade" id="removeEmployeeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Are you sure you want to delete @Model.FirstName @Model.LastName ?</h4>
            </div>

            <div class="modal-body">
                <form method="post" asp-controller="Employee" asp-action="RemoveEmployee">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="location.href='@Url.Action("ShowEmployees", "Employee")'">Cancel</button>
                </form>


            </div>

        </div>
    </div>
</div>



<script>
    $(function () {
        $("#removeEmployeeModal").modal();
    });
</script>


