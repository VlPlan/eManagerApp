@using eManager.WebModels;
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<style>


    .form-control {
        color: #0026ff;
        font-style: oblique;
    }

    h6 {
        position: center;
        color: #0026ff;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>Hello, please register your account!</h4>
            <br/>
            <span asp-validation-summary=""></span>
            <form asp-controller="user" asp-action="register" method="post">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                       
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Firstname" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                       
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="LastName" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                       
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                        </div>
                    </div>

                </div>
                <br />

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                       
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            <input asp-for="Username" type="text" class="form-control" placeholder="Username" />
                        </div>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <button class="btn btn-primary" type="submit">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



